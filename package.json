{
  "name": "exchangejs.com",
  "version": "0.2.0",
  "description": "Exchange JS website",
  "keywords": [
    "Edmonton",
    "javascript",
    "development"
  ],
  "license": "MIT",
  "author": "Exchange JS",
  "repository": {
    "type": "git",
    "url": "https://github.com/ExchangeJS/exchangejs.com"
  },
  "scripts": {
    "build": "npm run test && parcel build *.html",
    "dev": "parcel index.html --open",
    "start": "npm run build && npm run dev",
    "test": "npm run formatCheck",
    "formatCheck": "prettier -c 'css/**/*.{css,scss}' 'js/*.js' '!js/vendor/**/*.js' '**/*.html' '!dist/**/*'",
    "format": "prettier -w 'css/**/*.{css,scss}' 'js/*.js' '!js/vendor/**/*.js' '**/*.html' '!dist/**/*'"
  },
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-robot": "^1.0.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.7"
  },
  "dependencies": {
    "bulma": "^0.9.2"
  },
  "prettier": {
    "printWidth": 120
  }
}
