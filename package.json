{
  "name": "exchangejs.com",
  "version": "0.2.0",
  "description": "Exchange JS website",
  "keywords": [
    "Edmonton",
    "javascript",
    "development"
  ],
  "license": "MIT",
  "author": "Exchange JS",
  "repository": {
    "type": "git",
    "url": "https://github.com/ExchangeJS/exchangejs.com"
  },
  "scripts": {
    "build": "parcel build *.html && npm run moveStatic",
    "dev": "parcel serve index.html",
    "start": "npm run dev",
    "test": "npm run formatCheck",
    "formatCheck": "prettier -c 'css/**/*.{css,scss}' 'js/*.js' '!js/vendor/**/*.js' '**/*.html' '!dist/**/*'",
    "format": "prettier -w 'css/**/*.{css,scss}' 'js/*.js' '!js/vendor/**/*.js' '**/*.html' '!dist/**/*'",
    "moveStatic": "cp static/* dist"
  },
  "devDependencies": {
    "@parcel/optimizer-cssnano": "^2.0.0-nightly.605",
    "@parcel/optimizer-htmlnano": "^2.8.2",
    "@parcel/packager-css": "^2.8.2",
    "@parcel/packager-html": "^2.8.2",
    "@parcel/packager-raw-url": "^2.8.2",
    "@parcel/transformer-css": "^2.8.2",
    "@parcel/transformer-html": "^2.8.2",
    "@parcel/transformer-postcss": "^2.8.2",
    "@parcel/transformer-posthtml": "^2.0.0-nightly.605",
    "@parcel/transformer-sass": "^2.8.2",
    "@parcel/transformer-webmanifest": "^2.8.2",
    "parcel": "^2.8.2",
    "postcss": "^8.2.10",
    "prettier": "^2.2.1",
    "sass": "^1.32.7"
  },
  "dependencies": {
    "bulma": "^0.9.2"
  },
  "prettier": {
    "printWidth": 120
  }
}
